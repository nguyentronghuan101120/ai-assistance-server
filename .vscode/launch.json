{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Corrected for Windows
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src"
            },
            "args": [
                "src.main:app",
                "--reload",
                "--port",
                "8080",
                "--host",
                "0.0.0.0"
            ]
        }
    ]
}