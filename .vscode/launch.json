{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "src.main:app",
                "--reload",
                "--port",
                "7860",
                "--host",
                "0.0.0.0"
            ],
            "windows": {
                "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            }
        }
    ]
}
